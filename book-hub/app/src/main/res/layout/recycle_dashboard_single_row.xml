<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="130dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#fff"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/iicontent"
    android:layout_height="wrap_content">
   <ImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:src="@drawable/android_icon"
       android:id="@+id/imgbook"
       android:layout_margin="10dp"
       android:scaleType="center"
/>
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="maths"
        android:id="@+id/txtname_of_book"
        android:layout_toRightOf="@+id/imgbook"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Author name : bala"
        android:layout_toRightOf="@+id/imgbook"
        android:layout_below="@+id/txtname_of_book"
        android:id="@+id/txt_author"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="160dp"
        android:id="@+id/txt_mrp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgbook"
        android:layout_below="@+id/txt_author"
        android:layout_marginTop="10dp"
        android:textColor="#357a38"
        android:text="$250.0/"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtRate"
        android:drawableLeft="@drawable/ic_star"
        android:layout_toRightOf="@+id/txt_author"
        android:layout_margin="10dp"
        android:textColor="#ffca28"
        android:text="4.5"/>



</RelativeLayout>
</androidx.cardview.widget.CardView>