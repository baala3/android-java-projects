<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    tools:context=".fragment.TodayWeatherFragment">
    <LinearLayout
android:visibility="gone"

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/weather_pannel"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_city_name"
            android:textSize="24sp"

            android:text="Waether in London"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_temp"
                android:textSize="50sp"
                android:layout_gravity="center_vertical"

                android:text="25 C"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_description"
            android:textSize="20sp"

            android:text="description ofWaether in London"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_date_time"
            android:textSize="18sp"

            android:text="date,time"
            android:layout_height="wrap_content"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="16dp"
            android:stretchColumns="*"
            android:background="@drawable/border"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:text="wind"
                    android:background="@drawable/util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="speed 1 deg 1"
                    android:layout_column="1"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:text="pressure"
                    android:background="@drawable/util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="1071.90pa"
                    android:layout_column="1"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:text="humidity"
                    android:background="@drawable/util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="100%"
                    android:layout_column="1"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:text="sunrise"
                    android:background="@drawable/util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="11:00"
                    android:layout_column="1"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_sunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:text="sunset"
                    android:background="@drawable/util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="18:00"
                    android:layout_column="1"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:text="geo_cords"
                    android:background="@drawable/util"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="[65,76]"
                    android:layout_column="1"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/txt_geo_cords"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>

    </LinearLayout
       >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"/>



</RelativeLayout>