<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/rowcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#E05B5B"
        app:cardCornerRadius="20dp"
        app:cardElevation="11dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/rownotetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rownotedesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rownotetitle"
                android:text="desc"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rownoteamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rownotedesc"
                android:text="amount"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rownotecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rownoteamount"
                android:text="colour"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/rownotedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rownotecolor"
                android:text="date"
                android:textSize="18sp"
                android:textStyle="italic" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_below="@id/rownotedate"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"/>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rownotedate"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/roweditbutton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/ic_menu_edit" />

                <Button
                    android:id="@+id/rowdeletebutton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/ic_delete" />

            </TableRow>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>