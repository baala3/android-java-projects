<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_food_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_food_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.DoneActivity"></activity>
        <activity
            android:name=".Activity.ConfirmActivity"
            android:parentActivityName=".Activity.ItemsActivity" />
        <activity
            android:name=".Activity.ItemsActivity"
            android:parentActivityName=".Activity.HomeActivity" />
        <activity android:name=".Activity.HomeActivity" />
        <activity android:name=".Activity.OtpActivty" />
        <activity android:name=".Activity.ForgotPasswordActivity" />
        <activity
            android:name=".Activity.RegistorActivity"
            android:parentActivityName=".Activity.LoginActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>