<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.foodapp.Fragment.HistoryFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hhhh"
    android:layout_margin="15dp"
    android:textStyle="bold"
    android:text="Your previous orders are listed below:"
    />
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/hhhh"
        android:id="@+id/lllll"
        android:background="@color/colorPrimaryDark"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/hirecycler"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/lllll"
        android:layout_margin="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hprogress"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressring"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>
