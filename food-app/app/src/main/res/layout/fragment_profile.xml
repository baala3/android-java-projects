<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.foodapp.Fragment.ProfileFragment">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="125dp"
       android:src="@drawable/pirr"
       android:id="@+id/profphoto"
       android:layout_margin="20dp"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textAlignment="center"
        android:background="#fff"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/profname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/profphoto"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="number"
        android:textAlignment="center"
        android:background="#fff"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/profnumber"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/profname"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="mail"
        android:textAlignment="center"
        android:background="#fff"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/profmail"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/profnumber"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="address"
        android:textAlignment="center"
        android:background="#fff"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/profaddress"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@id/profmail"
        />

</RelativeLayout>
