<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:id="@+id/clicck"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        android:background="#fff"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:layout_weight="3.2">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/resitem"
                android:layout_height="match_parent"
                android:src="@drawable/pirr"
                 android:layout_margin="1dp"
                android:scaleType="centerCrop"
                /></androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_weight="5.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:textSize="17dp"
                android:id="@+id/restfood"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price per person"
                android:layout_marginLeft="0dp"
                android:id="@+id/restprice"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/restfood"
                android:textSize="16dp"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                >
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite"
                    android:id="@+id/regtlovenill"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                  android:layout_below="@+id/regtlovenill"
                    android:textAlignment="center"
                    android:textColor="#F5BD04"
                    android:id="@+id/restrating"
                    android:text="4.9"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>